<div class="container">
  <%= link_to chatrooms_path do %>
  <i class="fas fa-arrow-left"></i>
  <% end %>
  <%# <h1>Chatroom</h1> %>
  <div class="profile-img-pet">
    <div class=""> <%# dont remove this, it will break app %>
      <div class="row"><%= image_tag "avatar.jpg" %></div>
      <%# Alterar a imagem avatar para o pet selecionado, Obrigada Inês! %>
      <div class="row justify-content-center mt-4"><h2>NAME</h2></div>
    </div>
    <%# Para alterar o nome para o do User, Obrigada Inês! %>
  </div>

  <div class="chatroom-container" id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <div class="message-container <%= current_user == message.user ? "own" : "" %>" id="message-<%= message.id %>">
        <p class="message-container-content"><%= message.content %></p>
        <i class="author">
          <span><%= message.user.first_name %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
      </div>
    <% end %>
  </div>
  <div class="message-box our-forms mt-5">
    <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, input_html: {autocomplete: "off" }, placeholder: "Type message" %>
    <% end %>
  </div>
</div>
