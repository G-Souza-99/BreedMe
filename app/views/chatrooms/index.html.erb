<div class="container">
  <div class=" mt-5 text-center our-forms show-messages justify-content-center ">
    <div class="d-flex justify-content-center">
      <%= link_to pets_path,
      class: '' do %>
        <i class="fas fa-arrow-left mt-3"></i>
      <% end %>
      <h1 class="mb-3">Messages</h1>
      <div class="width-class"></div>
    </div>

    <div class="mt-5">
      <div class="row">
        <%# <div class="co 12 col"> %>

        <% @chatrooms.each do |chat| %>
          <% if chat.messages != [] %>
          <%= link_to chatroom_path(chat) do %>
          <div class="co-12 colsm-6 col-md-4 mb-3">
            <div class="card-product">
              <div class="avatar-message">
                <%= chat_avatar(chat, current_user) %>
              </div>
              <div class="card-product-infos">
                <% if chat.owner != current_user %>
                  <h2><%= "#{chat.owner.first_name} #{chat.owner.last_name}" %></h2>
                <% else %>
                  <h2><%= "#{chat.user.first_name} #{chat.user.last_name}" %></h2>
                <% end %>
                <p><%= chat.updated_at.to_date %></p>
              </div>
            </div>
          <% end %>
          </div>
        <% end %>
        <% end %>
        <%# </div> %>
      </div>
    </div>
  </div>
</div>
