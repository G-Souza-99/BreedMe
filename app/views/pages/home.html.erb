<div id="change-me">
  <div class="container">
  <%# Header %>
  <div class="header pt-3 mb-5">
    <%= image_tag "breedme_logo.png" %>
    <div class="header-options">
      <h4 class="mr-4 pt-3">Have an account?</h4>
      <% if user_signed_in? %>
        <%= link_to "Sign in", pets_path, class: 'btn btn-color' %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "btn btn-color" %>
      <% end %>
    </div>
  </div>
  <%# Hero Banner %>
    <div class="row banner">
      <div class="col-md-10">
        <h1 class="mb-4">FIND BREEDING PARTNERS FOR YOUR PETS!</h1>
        <p class="mb-2">BreedMe is the only pet matching app that helps you find what you need.
            You deserve to know your other breeders.
            Meet them today!</p>
        <p class="mt-4">By clicking Join, you agree to our <a class="underline" href="#">Terms</a>. Learn how we process your data in our <a class="underline" href="#">Privacy Policy</a> and <a class="underline" href="#">Cookies Policy</a>.</p>
        <button class="mt-4"><%= link_to "JOIN BREEDME!", new_user_registration_path, class: "nav-link" %></button>
      </div>
      <div class="col-md-2">
        <div class="image-transition">
        <%= image_tag "pet3.png", class:"landing-foto-dog" %>
        <%= image_tag "pet_cat.png", class:"landing-foto-cat d-none" %>
        </div>
      </div>
    </div>
  </div>
  <%# Footer %>
  <%# or maybe not %>
</div>
