<div class="container">
  <div class="mt-5">
    <div class=" mt-5 text-center our-forms justify-content-center ">
      <div class="d-flex justify-content-center">
        <a href=""><i class="fas fa-arrow-left"></i></a>
        <h2>Account info</h2>
        <div class="width-class"></div>
      </div>
      <h1>Edit</h1>
      <div class="">
        <div class="row text-center d-flex justify-content-center">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs mt-4">
            <% if resource.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar-large" %>
            <% else %>
              <%= image_tag "avatar.jpeg", class: "avatar-large" %>
            <% end %>

              <%= f.input :photo, label: false, as: :file %>
              <%= f.input :email, required: true, label: false, placeholder: "email", autofocus: true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :password,
                          hint: "leave it blank if you don't want to change it",
                          required: false,
                          label: false,
                          placeholder: "new password",
                          input_html: { autocomplete: "new-password" } %>
              <div class="space-class"></div>
              <%= f.input :password_confirmation,
                          required: false,
                          label: false,
                          placeholder: "confirm new password",
                          input_html: { autocomplete: "new-password" } %>
              <div class="space-class"></div>
              <%= f.input :current_password,
                          hint: "old password to confirm change",
                          required: true,
                          label: false,
                          placeholder: "current password",
                          input_html: { autocomplete: "current-password" } %>
            </div>

            <div class="form-actions mb-5">
              <%= f.button :submit, "Update", class:"btn-ours" %>
            </div>
          <% end %>
        </div>
        <h3>Want to leave?</h3>
        <p><%= link_to "Log out", destroy_user_session_path, method: :delete %></p>
      </div>
      <h3>Unhappy?</h3>
      <p><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
      <%= link_to "Back", pets_path %>
    </div>
  </div>
</div>
