<h1>Pet information</h1>

<%= link_to "⬅️ Back", pets_path %>
<%= link_to "📝 Edit", edit_pet_path(@pet) %>
<%= link_to "🗑 Delete", pet_path(@pet), method: :delete %>

<%= cl_image_tag @pet.photo.key %>
<p><%= @pet.pet_type == 'dog' ? '🐶' : '🐱' %> </p>
<p>Name: <%= @pet.name %></p>
<p>Breed: <%= @pet.breed %></p>
<p>Sex: <%= @pet.sex %></p>
<p>Birthday: <%= @pet.birthday %></p>
<p>Pedigree Number: <%= @pet.pedigree_number %></p>
<p>Description: <%= @pet.description %></p>


