<%= simple_form_for(@pet) do |f| %>
  <%= f.input :name %>
  <%= f.input :pet_type, as: :select, collection: ['dog', 'cat']%>
  <%= f.input :sex, as: :select, collection: ['female', 'male'] %>
  <%= f.input :breed, as: :select, collection: [] %>
  <%= f.input :pedigree_number %>
  <%= f.label :birthday, 'Birthday' %>
  <%= f.date_field :birthday, value: Time.now.strftime('%Y-%m-%d'), max: Date.today %>
  <%= f.input :description %>
  <%= f.input :on_heat %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>

