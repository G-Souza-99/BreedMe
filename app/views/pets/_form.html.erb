<% breeds = ['rafeiro', 'não rafeiro', 'adicionar restantes raças'] %>

<%# Atualizar com todas as raças de cães e gatos e fazer a collection ser condicionada de acordo com pet_type %>

<%= simple_form_for(@pet) do |f| %>
  <%= f.input :name %>
  <%= f.input :pet_type, as: :radio_buttons, collection: [['0', 'dog'], ['1', 'cat']], label_method: :second, value_method: :first %>
  <%= f.input :sex, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male']], label_method: :second, value_method: :first %>
  <%= f.input :breed, as: :select, collection: breeds %>
  <%= f.input :pedigree_number %>
  <%= f.label :birthday, 'Birthday' %>
  <%= f.date_field :birthday, value: Time.now.strftime('%Y-%m-%d'), max: Date.today %>
  <%= f.input :description %>
  <%= f.input :on_heat %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>

