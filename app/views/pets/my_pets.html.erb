<h1>My pets</h1>

<% @pets.reverse.each do |pet| %>
  <%= link_to pet_path(pet) do %>
  <%= cl_image_tag pet.photo.key, width: 200, height: 150, crop: :fill %>
  <h2><%= pet.name %></h2>
  <p><%= pet.breed %></p>
  <p><%= pet.sex %></p>
  <% end %>
<% end %>

<h3>Add a new pet</h3>
<% if policy(Pet).create? %>
  <%= link_to '+ Add', new_pet_path %>
<% end %>

<p><%= link_to "Back", pets_path %></p>
