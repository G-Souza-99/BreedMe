<div class="container">
  <div class="my-pets">
    <div class=" mt-5 text-center our-forms justify-content-center ">
      <div class="d-flex justify-content-center">
      <%= link_to pets_path,
      class: '' do %>
        <i class="fas fa-arrow-left mt-3"></i>
      <% end %>
    <h1 class="mb-3">My pets</h1>
    <div class="width-class"></div>
    </div>
    </div>
    <div class="row">
      <div id="add-pet" class="co-12 colsm-6 col-md-4 mb-3">
        <div class="my-pet-card m-1 mt-3">
        <%= image_tag "avatar.jpg" %>
          <div class="my-pet-info">
            <div class="pet-text">
              <h2>Add a new pet!</h2>
              <% if policy(Pet).create? %>
                <%= link_to '+ Add', new_pet_path, id:"add-pet-button" %>
              <% end %>
            </div>
            <h2 class="my-pet-extrax blurry">pet sex</h2>
          </div>
        </div>
      </div>
      <% @pets.reverse.each do |pet| %>
        <%= link_to pet_path(pet) do %>
        <div class="co-12 colsm-6 col-md-4 mb-3">
          <div class="my-pet-card m-1 mt-3">
            <%= cl_image_tag pet.photo.key%>
            <div class="my-pet-info">
              <div class="pet-text">
                <div class='d-flex'>
                  <h2 class="mr-2"><%= pet.name %></h2>
                    <% if pet.pedigree_number %>
                      <div data-tooltip="has a pedigree number" class="d-flex">
                        <i class="fas fa-check-circle super_tooltip mr-2"></i>
                      </div>
                    <% end %>
                    <%# flame symbol if female on heat %>
                    <% if pet.sex == 'female' && pet.on_heat == true %>
                      <div data-tooltip="female on heat" class="d-flex">
                        <i class="fas fa-fire-alt super_tooltip"></i>
                      </div>
                    <% end %>
                </div>
                <p><%= pet.breed %></p>
              </div>
              <h2 class="my-pet-extrax"><%= pet.sex %></h2>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
