<div class="container">
  <%# Website switcheroooo switch thing %>
  <div>
    <h2>Cat / Dog</h2>
    <label class="switch">
      <input type="checkbox">
      <span class="slider round"></span>
    </label>
  </div>
  <%# current pets looking for  %>
  <h1 class="text-center mt-4 mb-3">Looking for Now</h1>
  <div class="row">
    <% @pets.reverse.each do |pet| %>
      <%= link_to pet_path(pet) do %>
      <div class="co-12 colsm-6 col-md-6 mb-3">
        <div class="card-trip">
          <%= cl_image_tag pet.photo.key %>
          <div class="card-trip-infos">
            <div>
              <h2><%= pet.name %></h2>
              <p><%= pet.breed %></p>
            </div>
            <h2 class="card-trip-pricing"><%= pet.sex %></h2>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
